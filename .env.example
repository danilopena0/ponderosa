# Ponderosa Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# GCP Configuration (Required)
# =============================================================================

# Your GCP project ID (found in console)
GCP_PROJECT_ID=your-project-id

# GCP region for resources (us-central1 is cheapest for AI services)
GCP_REGION=us-central1

# Cloud Storage bucket name (must be globally unique)
GCP_BUCKET_NAME=your-project-id-ponderosa

# =============================================================================
# Speech-to-Text Configuration (Optional - has defaults)
# =============================================================================

# STT model: "chirp" for best quality, "latest_short" for short audio
# SPEECH_MODEL=chirp

# Primary language code
# SPEECH_LANGUAGE_CODE=en-US

# Enable speaker diarization
# SPEECH_ENABLE_DIARIZATION=true

# =============================================================================
# Gemini Configuration (Optional - has defaults)
# =============================================================================

# Gemini model for enrichment (flash is 10x cheaper than pro)
# GEMINI_MODEL=gemini-1.5-flash

# Generation temperature (lower = more focused)
# GEMINI_TEMPERATURE=0.3

# =============================================================================
# Pipeline Configuration (Optional - has defaults)
# =============================================================================

# Service account email for pipeline execution
# PIPELINE_SERVICE_ACCOUNT=ponderosa-sa@your-project.iam.gserviceaccount.com

# Machine type for pipeline components
# PIPELINE_MACHINE_TYPE=e2-standard-4

# =============================================================================
# Podcast Configuration (Optional - has defaults)
# =============================================================================

# Default RSS feeds (comma-separated)
# PODCAST_DEFAULT_RSS_FEEDS=https://flirtingwithmodels.libsyn.com/rss

# Max episodes to fetch per feed
# PODCAST_MAX_EPISODES_PER_FEED=10

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
