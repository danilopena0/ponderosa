# Ponderosa Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Whisper Configuration (Optional - has defaults)
# =============================================================================

# Model size: tiny, base, small, medium, large-v3
# WHISPER_MODEL_SIZE=base

# Device: cpu or cuda
# WHISPER_DEVICE=cpu

# Compute type: int8, float16, float32
# WHISPER_COMPUTE_TYPE=int8

# Language code for transcription
# WHISPER_LANGUAGE=en

# =============================================================================
# Podcast Configuration (Optional - has defaults)
# =============================================================================

# Default RSS feeds (comma-separated)
# PODCAST_DEFAULT_RSS_FEEDS=https://flirtingwithmodels.libsyn.com/rss

# Max episodes to fetch per feed
# PODCAST_MAX_EPISODES_PER_FEED=10

# =============================================================================
# Perplexity API (Required for enrichment)
# =============================================================================

# API key from https://docs.perplexity.ai/
PERPLEXITY_API_KEY=your-api-key-here

# Model to use (default: sonar-pro)
# PERPLEXITY_MODEL=sonar-pro

# =============================================================================
# ChromaDB (Optional - has defaults)
# =============================================================================

# Persistence directory (default: ./data/chromadb)
# CHROMA_PERSIST_DIRECTORY=./data/chromadb

# =============================================================================
# Application Settings
# =============================================================================

# Environment: development, staging, production
ENVIRONMENT=development

# Enable debug mode
DEBUG=false

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
